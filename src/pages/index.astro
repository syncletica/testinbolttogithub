---
import Layout from '../layouts/Layout.astro';
---

<Layout title="My Static Site">
	<main>
		<h1>Welcome to My Site</h1>
		<p>This is a simple static website built with Astro.</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		max-width: 800px;
	}
	h1 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: white;
	}
	p {
		color: #ccc;
		line-height: 1.6;
	}
</style>